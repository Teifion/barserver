<% bsname = view_colour() %>

<%= render(
  TeiserverWeb.Admin.GeneralView,
  "sub_menu.html",
  Map.merge(assigns, %{active: "clans"})
) %>

<div class="row section-menu">
  <div class="col-md-12">
    <div class={"card border-#{bsname}"}>
      <div class="card-body">
        <%= render(
          TeiserverWeb.Admin.ClanView,
          "section_menu.html",
          Map.merge(assigns, %{
            show_search: false,
            active:
              cond do
                @conn.params["search"] != nil -> "search"
                # @filter != nil -> @filter
                true -> "index"
              end
          })
        ) %>
        <br /><br />

        <h4>Listing Clans</h4>

        <table class="table table-sm">
          <thead>
            <tr>
              <th colspan="2">Name</th>
              <th>Tag</th>
              <th colspan="2">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <%= for clan <- @clans do %>
              <tr>
                <td style={"color: #{clan.colour};"} width="22">
                  <%= central_component("icon", icon: clan.icon) %>
                </td>
                <td><%= clan.name %></td>
                <td><%= clan.tag %></td>

                <td>
                  <a
                    href={Routes.ts_admin_clan_path(@conn, :show, clan.id)}
                    class="btn btn-secondary btn-sm"
                  >
                    Show
                  </a>
                </td>

                <td>
                  <a
                    href={Routes.ts_admin_clan_path(@conn, :edit, clan.id)}
                    class="btn btn-secondary btn-sm"
                  >
                    Edit
                  </a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
